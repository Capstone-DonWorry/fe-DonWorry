<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_shape_sky_blueline"
    android:padding="20dp">

    <!-- 날짜 -->
    <TextView
        android:id="@+id/DayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-06-06"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black_gray"
        android:layout_marginBottom="16dp" />

    <!-- 추천 금액 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="추천 금액"
            android:textColor="@color/black_gray"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/DailyRecommendedAmount"
            android:text="0 원"
            android:textColor="@color/black_gray"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- 총 지출 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:text="총 지출"
            android:textColor="@color/black_gray"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TotalSpent"
            android:text="0 원"
            android:textColor="@color/black_gray"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- 예상 지출 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:text="예상 지출"
            android:textColor="@color/black_gray"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ExpectedSpent"
            android:text="0 원"
            android:textColor="@color/black_gray"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/DayRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="5dp" />

    <!-- 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_shape_mid_blue"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/AddNOBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:padding="15dp"
            android:text="취소"
            android:textColor="@color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/AddADDBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:padding="15dp"
            android:text="추가"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>

