<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="30dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/BackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="비밀번호 재설정"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 비밀번호를 입력해주세요."
        android:textAlignment="center"
        android:textColor="@color/mid_gray"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="새 비밀번호"
            android:textColor="@color/black_gray"
            android:textSize="12sp"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/InputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_shape_sky_blue"
        android:hint="비밀번호를 입력해 주세요."
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/dark_gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="새 비밀번호 확인"
            android:textColor="@color/black_gray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RightPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:text=""
            android:textSize="10sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/InputRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_shape_sky_blue"
        android:hint="비밀번호를 다시 입력해 주세요."
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/dark_gray"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유의사항\n    - 8자~ 15자 길이로 만들어주세요.\n    - 영문 대/소문자, 숫자, 특수 문자 2가지를 조합해주세요."
        android:layout_marginTop="20dp"
        android:textColor="@color/black_gray"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/ResetPwBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:background="@drawable/round_shape_gray"
        android:text="비밀번호 재설정"
        android:textColor="@color/dark_gray" />


</LinearLayout>